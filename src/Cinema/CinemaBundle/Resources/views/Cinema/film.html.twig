{% extends 'CinemaCinemaBundle::layout.html.twig' %}



    {% block body %}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Cinéma</p>
            <div class="list-group">
                <a href="{{ path('page_liste') }}" class="list-group-item active">Films</a>
                <a href="{{ path('page_realisateur') }}" class="list-group-item">Réalisateurs</a>

            </div>
        </div>

        <div class="col-md-9">

            <h2>Liste des films</h2>

            <br />
            {% for film in films %}

            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4>{{ film.Titre }}</h4>
                    <p>{{ film.Resume }}</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">        {{ film.Sortie|date('d/m/Y') }}</p>
                    <p>Réalisé par : {{ film.personne }} </p>
                    <br>
                    <p>Genre : {{ film.genre }}</p>
                </div>
                <br>


            </div>
            {% endfor %}





        </div>

    </div>

</div>
    {% endblock %}
